# Kite Connect API Configuration
# Copy this file to .env and fill in your credentials

# =============================================================================
# API Credentials (Required)
# =============================================================================
# Get these from https://developers.kite.trade/
KITE_API_KEY=your_api_key_here
KITE_API_SECRET=your_api_secret_here

# =============================================================================
# Authentication Tokens
# =============================================================================
# Access token is obtained after login flow
# You can store it here after generating for convenience
KITE_ACCESS_TOKEN=
KITE_REQUEST_TOKEN=

# =============================================================================
# API URLs (Optional - defaults provided)
# =============================================================================
# KITE_ROOT_URL=https://api.kite.trade
# KITE_LOGIN_URL=https://kite.zerodha.com/connect/login
# KITE_WEBSOCKET_URL=wss://ws.kite.trade

# =============================================================================
# General Settings
# =============================================================================
# Enable debug mode for verbose logging
KITE_DEBUG=false

# Request timeout in seconds
KITE_TIMEOUT=7

# Disable SSL verification (not recommended for production)
KITE_DISABLE_SSL=false

# =============================================================================
# WebSocket Settings
# =============================================================================
# Enable auto-reconnect for WebSocket
KITE_WS_RECONNECT=true

# Maximum reconnection attempts
KITE_WS_RECONNECT_MAX_TRIES=50

# Maximum delay between reconnection attempts (seconds)
KITE_WS_RECONNECT_MAX_DELAY=60

# WebSocket connection timeout (seconds)
KITE_WS_CONNECT_TIMEOUT=30

# =============================================================================
# Proxy Settings (Optional)
# =============================================================================
# KITE_PROXY_HOST=
# KITE_PROXY_PORT=
